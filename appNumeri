import java.util.Scanner;

public class Main {
    public static void main(String[] args)
    {
        int opzione;
        boolean fine=true;
        Scanner write = new Scanner(System.in);
        do {
            ClrScr();
            menu();
            System.out.println("selezione un'opzione");
            opzione = write.nextInt();
            switch(opzione){
                case 1:
                    System.out.println("genera numeri");;
                    break;
                case 2:
                    System.out.println("visualizza numeri");;
                    break;
                case 3:
                    System.out.println("app numeri pari");;
                    break;
                case 4:
                    System.out.println("exit");;
                    fine=false;
                    break;
                default:
                    System.out.println("opzione errata");
                    break;

            }Wait(2000);
        }while(fine);


        }

    private static void menu() {
        System.out.println("=========== SALAM MALEKUM MALEKUM SALAM");
        System.out.println("[1] genera numeri");
        System.out.println("[2] visualizza numeri");
        System.out.println("[3] numeri pari");
        System.out.println("[4] exit");
    }
    private static void ClrScr(){
        try {
            new ProcessBuilder("cmd", "/c", "cls").inheritIO().start().waitFor();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    private static void Wait(int tempo) {
        try{
            Thread.sleep(tempo);
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
    }

}

